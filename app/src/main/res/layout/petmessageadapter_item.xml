<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:minHeight="@dimen/height_150"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:padding="@dimen/margin_20"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pet_name"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_22"
            android:layout_gravity="center_vertical"
            android:text="未知"/>
        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宠物品种：未知"
            style="@style/petmessageadapter_info" />
        <TextView
            android:id="@+id/pet_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/petmessageadapter_info"
            android:text="宠物年龄：0岁"/>
        <TextView
            android:id="@+id/pet_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/petmessageadapter_info"
            android:singleLine="true"
            android:text="宠物标签：xx xx xx"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pet_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pethead"/>
        <TextView
            android:id="@+id/pet_compile"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_18"
            android:text="编辑资料 >"/>

    </LinearLayout>
</LinearLayout>