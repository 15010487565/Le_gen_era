<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_margin="@dimen/margin_20"
    app:contentPadding="@dimen/margin_10"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/margin_3"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_jifen_gift"
        android:src="@mipmap/image_jifen_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_gift_name"
        android:text="橡胶发声耐咬玩具"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="积分:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gift_num"
            android:text="100"
            android:textColor="#FF3434"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_duihuan_item"
            android:text="兑换"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/white"
            android:background="@drawable/selectore_circle_orange"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
