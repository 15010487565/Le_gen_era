<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_35"
    android:background="@drawable/shape_yuanjiao_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:gravity="center"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_18"
        android:text="确定删除此收货地址吗?"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_35"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_25"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:background="@drawable/shape_yuanjiao_solid_red"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"
            android:text="@string/main_confirm"/>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_25"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_35"
            android:background="@drawable/shape_yuanjiao_solid_golden"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"
            android:text="@string/main_cancel"/>
    </LinearLayout>
</LinearLayout>