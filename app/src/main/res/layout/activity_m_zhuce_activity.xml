<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Zhuce_Activity">
    <TextView
        android:id="@+id/text_quxiao"
        android:text="取消"
        android:layout_margin="20dp"
        android:textColor="#FFD361"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_logo"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:id="@+id/linear_address"
        android:layout_marginTop="25dp"
        android:layout_below="@id/image_logo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_guojia"
            android:text="国家/地区"
            android:layout_below="@id/image_logo"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_china"
            android:text="中国"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_guojia"
            android:layout_alignRight="@id/text_guojia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginRight="20dp"
            android:src="@mipmap/back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:id="@+id/linear_phone"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear_address"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="+86"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingLeft="20dp"
            android:digits="@string/number"
            android:textCursorDrawable="@null"
            android:id="@+id/edit_callphone_zhuce"
            android:background="@null"
            android:layout_below="@id/linear_address"
            android:hint="输入手机号码"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40" />
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_below="@id/linear_phone"
        android:layout_marginTop="10dp"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <ImageView
        android:id="@+id/m_image_zhuce"
        android:layout_marginTop="50dp"
        android:layout_below="@id/linear_phone"
        android:src="@mipmap/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
