<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_margin="@dimen/margin_20"
    app:contentPadding="@dimen/margin_10"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/margin_3"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_fujin_pet"
            android:src="@mipmap/image_fujin_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_fujin_pet_name"
                android:textSize="@dimen/textsize_20"
                android:text="豆豆儿"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@mipmap/image_fujin_pet_dingwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_fujin_pet_dingwei"
                android:text="8.5km"
                android:textSize="@dimen/textsize_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
