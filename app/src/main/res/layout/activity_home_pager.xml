<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Home_Pager">
    <FrameLayout
        android:id="@+id/fragment_mian_home"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0px"></FrameLayout>

    <RadioGroup
            android:id="@+id/main_rg"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/main_buttom_shouye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_shouye"
                android:gravity="center"
                android:text="首页" />
            <RadioButton
                android:id="@+id/main_buttom_pet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_pet"
                android:gravity="center"
                android:text="宠物故事" />

            <RadioButton
                android:id="@+id/main_buttom_gouwuche"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@drawable/selector_gouwuche"
                android:text="购物车" />

            <RadioButton
                android:id="@+id/main_buttom_wode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_wode"
                android:gravity="center"
                android:text="我的" />
        </RadioGroup>
</LinearLayout>
